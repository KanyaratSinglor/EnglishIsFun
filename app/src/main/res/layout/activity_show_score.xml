<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwin"
    tools:context=".ShowScore">


    <TextView
        android:id="@+id/text_view_top_name_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="2nd"
        android:textColor="#040202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_view_top_name_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_top_name_" />

    <TextView
        android:id="@+id/text_view_top_name_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="3nd"
        android:textColor="#040202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_view_top_name_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_top_name_4" />

    <TextView
        android:id="@+id/text_viwe_show_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000D0909"
        android:text="score"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_score"
        app:layout_constraintTop_toTopOf="@+id/text_view_score" />

    <TextView
        android:id="@+id/text_view_top_point_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score3"
        android:textColor="#040202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_top_name_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_top_name_3"
        app:layout_constraintTop_toTopOf="@+id/text_view_top_name_3" />

    <TextView
        android:id="@+id/text_view_top_name_1"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:text="top1"
        android:textColor="#040202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_top_name_"
        app:layout_constraintEnd_toStartOf="@+id/text_view_top_point_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_top_name_"
        app:layout_constraintTop_toTopOf="@+id/text_view_top_name_" />

    <TextView
        android:id="@+id/text_view_top_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score1"
        android:textColor="#040202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_top_name_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_top_name_1"
        app:layout_constraintTop_toTopOf="@+id/text_view_top_name_1" />

    <TextView
        android:id="@+id/text_view_top_point_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
